<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
    
    <style name="BackActivity">
        <item name="android:background">@color/grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Base application theme. -->
    <style name="PertaTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/PertaActionBar</item>
        <item name="titleTextStyle">@style/PertaBarTitleText</item>
        <item name="android:background">@color/grey</item>
        
    </style>

    <!-- ActionBar styles -->
    <style name="PertaActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/blue_light</item>
        <item name="android:titleTextStyle">@style/PertaBarTitleText</item>
        <item name="android:icon">@color/transparent</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NoActionBar" parent="android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>