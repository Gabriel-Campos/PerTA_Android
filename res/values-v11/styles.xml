<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <!-- Base application theme. -->
    <style name="PertaTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/PertaActionBar</item>
        <item name="titleTextStyle">@style/PertaBarTitleText</item>
    </style>

    <!-- ActionBar styles -->
    <style name="PertaActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/blue_light</item>
        <item name="android:titleTextStyle">@style/PertaBarTitleText</item>
        <item name="android:icon">@color/transparent</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- ActionBar title text -->
    <style name="PertaBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>